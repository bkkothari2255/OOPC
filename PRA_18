/* A program to demonstrate use of constructors. */
#include<iostream>
#include<iomanip>

using namespace std;

class Person 
{
	char fname[10],lname[10];
	int pid,age;
	
	public:
		
		Person()// defining constructor
		{
			cout << "ENTER PERSON DETAILS"<<endl;
		}
		void fetchInfo() // method to fetch information
		{
			cout << "Enter Person Name : ";
			cin >> fname >> lname;
			cout << "Enter PID : ";
			cin >> pid;
			cout << "Enter Age : ";
			cin >> age;			
		}
		void dipInfo() // method to display information
		{
			cout << pid << setw(20) <<setfill(' ')<<fname<<" "<<lname <<setw(6)<<age <<endl;
		}
};

int main()
{
	Person p1;	
	Person p2;	
	Person p3;
	cout <<"PID "<<setw(20)<<" Name "<<setw(6)<<" AGE "<<endl;
	p1.dipInfo();
	p2.dipInfo();
	p3.dipInfo();
	
  return 0;
}
