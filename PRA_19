/* A program to demonstrate use of copy constructors.*/
#include<iostream>

using namespace std;

class ctor 
{ 
  int a[100],n;
	public:
		ctor()// do nothing constructor 
		{
			
		}
		ctor(ctor &A) // copy constructor definintion
		{	
			n=A.n;
			for(int i=0;i<n;i++)
			{
				a[i]=A.a[i];
			}
			cout << endl << "Copy constructor invoked ..."<<endl;	
		}
		void getElemnt()
		{
			cout <<"ARRAY"<< endl << "Enter number of Elements : ";
			cin >> n;
			cout << endl << "Enter "<<n<<" Elements :"<< endl;
			for(int i=0;i<n;i++)
			{
				cin >> a[i];
			}
			cout << endl ;
		}
   void putElemnt()
	  {
		  cout <<endl<<"ARRAY"<<endl << "Present Elements :";
		  for(int i=0;i<n;i++)
		  {
			  cout << a[i] << "\t";
		  }
		  cout << endl;	
	   }	
};
int main()
{
	ctor ar;
	ar.getElemnt();
	cout <<endl<<"OBJECT 1 : "<<endl;
	ar.putElemnt(); 
	ctor b(ar); // invokes the copy constructor 
	cout << endl<<"OBJECT 2 : "<<endl;
	b.putElemnt(); // puting elements after copy
	return 0;
}
/*
ARRAY
Enter number of Elements : 5

Enter 5 Elements :
2 5 22 6 21 65


OBJECT 1 :

ARRAY
Present Elements :2     5       22      6       21

Copy constructor invoked ...

OBJECT 2 :

ARRAY
Present Elements :2     5       22      6       21

