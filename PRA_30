/*A program to use of pointer to objects. */
#include<iostream>
#include<iomanip>
int n;
using namespace std;

class User
{
	static int count; 
	int uid,age;
	char fname[10],lname[10];
	
	public :
		void getDetails()
		{	
			cout << "Enter Name : ";
			cin >> fname >> lname;
			cout << "Enter UID : ";
			cin >> uid;
			cout << "Enter Age : ";
			cin >> age;
		}
		void display(int a)
		{
			cout <<endl<<a<<"  "<<fname<<" "<<lname<<setw(5)<<uid<<setw(5)<<age;
		}	
};
int main()
{
	cout << "Enter Number of User : ";
	cin >> n;
	User *a=new User[n];
	User *b=a;	
	for(int i=0;i<n;i++)
	{
		cout <<endl <<"Enter details of USER "<<i+1<<endl;
		a->getDetails();
		a++;
	}
	cout <<endl<<"No."<<setw(3)<<" Name "<<setw(10)<<"uid"<<setw(10)<<"age"<<endl;
	for(int i=0;i<n;i++)
	{
		b->display(i);
		b++;
	}
	return 0;
}
