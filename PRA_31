/* A program to use of this pointer */
#include<iostream>
using namespace std;
class Star 
{ 
	int n; 
	public: 
		void getN (int n) 
		{ 
			// The 'this' pointer is used to retrieve the object's n 
			// hidden by the local variable 'n' 
			this->n = n; 
		} 
		void print() 
		{
			for(int i = 1, k = 0; i <= n; ++i, k = 0)
		    {
    		    for(int j = 1; j <= n-i; ++j)
    	    	{
    	        	cout <<"  ";
	    	    }
		
				while(k != 2*i-1)
   	     		{
   	        		cout << "* ";
   	        		++k;
   	    		}
    		    cout << endl;
    		}    
		} 
};
int main() 
{ 
	Star s; 
	int n;
	cout << "Enter Size of Pyramid : ";
	cin >> n; 
	s.getN(n); 
	s.print(); 

	return 0; 
}

/*
Output:
Enter Size of Pyramid : 7
            *
          * * *
        * * * * *
      * * * * * * *
    * * * * * * * * *
  * * * * * * * * * * *
* * * * * * * * * * * * *

--------------------------------
Process exited after 2.857 seconds with return value 0
